@using SweetShop.Resources
@model Entity.Category

@{
    ViewBag.Title = "Create";
}

<h2 class="yazi" style="padding-top:20px;">@Lang.Create</h2>

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal yazi">
        <h4>@Lang.Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group yazi8">
            @Html.LabelFor(model => model.CategoryName,Lang.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 yazi8">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group yazi">
            @*@Html.LabelFor(model => model.CategoryImageURL, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label(Lang.ImageURL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("CategoryImage", null, new { @type = "file", @class = "form-control" })
                @*@Html.EditorFor(model => model.CategoryImageURL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryImageURL, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group yazi">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Lang.Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Lang.Back, "Index",null,new { @class= "yazi" })
</div>
