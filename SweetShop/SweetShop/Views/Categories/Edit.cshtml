@using SweetShop.Resources
@model Entity.Category

@{
    ViewBag.Title = "Edit";
}

<h2 class="yazi" style="padding-top:20px;">@Lang.Edit</h2>

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal yazi">
        <h4>@Lang.Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName,Lang.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group yazi">
            @*@Html.LabelFor(model => model.CategoryImageURL, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label(Lang.ImageURL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.CategoryImageURL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryImageURL, "", new { @class = "text-danger" })*@
                @Html.TextBox("CategoryImgUrl", null, new { @type = "file", @class = "form-control" })
            </div>
        </div>

        <div class="form-group yazi">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Lang.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="yazi">
    @Html.ActionLink(Lang.Back, "Index")
</div>
