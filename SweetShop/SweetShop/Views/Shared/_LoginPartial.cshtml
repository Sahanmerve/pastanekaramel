@using Microsoft.AspNet.Identity
@using SweetShop.Resources

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right"}))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right" style="margin-top:20px;">
    <li>
        @Html.ActionLink(Lang.Hello + " " + User.Identity.GetUserName() + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:#FAC189", @class = "yazi" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="yazi" style="color:#FAC189;">@Lang.LogOff</a></li>
    <li><a href="/Home/Translate/en?url=@Url.Encode(Request.Url.AbsolutePath)" style="color:#FAC189;" class="yazi">EN</a></li>
    <li><a href="/Home/Translate/tr?url=@Url.Encode(Request.Url.AbsolutePath)" style="color:#FAC189;" class="yazi">TR</a></li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right" style="margin-top:20px;">

    <li>
        @*@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @style = "color:#FAC189",@class="yazi"})*@
        <a href="/Account/Register/" class="yazi" style="color:#FAC189">@Lang.Register</a>
    </li>
    <li>
        @*@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "color:#FAC189", @class = "yazi" })*@
        <a href="/Account/Login/" class="yazi" style="color:#FAC189">@Lang.LogIn</a>
    </li>
    <li><a href="/Home/Translate/en?url=@Url.Encode(Request.Url.AbsolutePath)"style="color:#FAC189" class="yazi">EN</a></li>
    <li><a href="/Home/Translate/tr?url=@Url.Encode(Request.Url.AbsolutePath)" style="color:#FAC189" class="yazi">TR</a></li>

</ul>
}

   
