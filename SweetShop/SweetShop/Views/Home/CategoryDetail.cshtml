@using SweetShop.Resources
@using Entity
@model List<Product>
@{
    ViewBag.Title = @Lang.Category;
}
<script src="//rawgithub.com/ashleydw/lightbox/master/dist/ekko-lightbox.js"></script>
<style>
@@import url("http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css");

.panel-pricing {
  -moz-transition: all .3s ease;
  -o-transition: all .3s ease;
  -webkit-transition: all .3s ease;
}
.panel-pricing:hover {
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.2);
}
.panel-pricing .panel-heading {
  padding: 20px 10px;
}
.panel-pricing .panel-heading .fa {
  margin-top: 10px;
  font-size: 58px;
}
.panel-pricing .list-group-item {
  color: #777777;
  border-bottom: 1px solid rgba(250, 250, 250, 0.5);
}
.panel-pricing .list-group-item:last-child {
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
}
.panel-pricing .list-group-item:first-child {
  border-top-right-radius: 0px;
  border-top-left-radius: 0px;
}
.panel-pricing .panel-body {
  background-color: #f0f0f0;
  font-size: 40px;
  color: #777777;
  padding: 20px;
  margin: 0px;
}

</style>
<form>

    <br /><br /><br />
    <section id="plans" align="center">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 text-center">
                        <div class="panel panel-danger panel-pricing">
                            <div class="panel-heading">
                                <i>
                                    <img src="~/Uploads/Products/@Html.Raw(item.ProductImageUrl)" style="width:300px;height:200px;"/>
                                </i>
                            </div>
                            <div class="panel-body text-center yazi">
                                <p>@item.ProductName</p>
                            </div>
                            <ul class="list-group text-center">
                                <li class="list-group-item yazi"><i class="fa fa-check"></i>@item.ProductDescription </li>
                                @*<li class="list-group-item yazi"><i class="fa fa-check"></i> @item.Calori Kcal</li>*@
                                <li class="list-group-item yazi"><i class="fa fa-check"></i> @item.ProductPrice.ToString("C")</li>
                                @*<li class="list-group-item yazi"><i class="fa fa-check"></i>Stokta @item.Piece adet bulunmaktadır.</li>*@
                            </ul>                           
                        </div>
                    </div>
                    <!-- /item -->
                }

            </div>
        </div>
    </section>
</form>
